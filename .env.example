# Multiverse Inference Gateway Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Multiverse Inference Gateway"
APP_VERSION="1.0.0"
DEBUG=false

# =============================================================================
# Server Settings
# =============================================================================
HOST="0.0.0.0"
PORT=8000
RELOAD=false

# =============================================================================
# Database Settings
# =============================================================================
DATABASE_URL="sqlite+aiosqlite:///./gateway.db"
DATABASE_WAL_MODE=true

# =============================================================================
# Security Settings
# =============================================================================
# REQUIRED: Set a strong API key for admin endpoints (minimum 16 characters)
ADMIN_API_KEY="your-secure-api-key-here-change-this"

# Optional: Require API keys for client inference endpoints
REQUIRE_CLIENT_API_KEY=false
# CLIENT_API_KEYS=["key1", "key2", "key3"]

# =============================================================================
# Logging Settings
# =============================================================================
LOG_LEVEL="INFO"
LOG_DIR="logs"
LOG_FILE="gateway.log"
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true

# =============================================================================
# Health Check Settings
# =============================================================================
HEALTH_CHECK_INTERVAL_SECONDS=60
HEALTH_CHECK_TIMEOUT_SECONDS=10
MAX_CONSECUTIVE_FAILURES=3
AUTO_DEREGISTER_AFTER_FAILURES=true

# =============================================================================
# Request Routing Settings
# =============================================================================
REQUEST_TIMEOUT_SECONDS=300
MAX_RETRY_ATTEMPTS=2
ROUND_ROBIN_ENABLED=true

# =============================================================================
# Rate Limiting Settings
# =============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# Request/Response Settings
# =============================================================================
MAX_REQUEST_BODY_SIZE=1048576
INCLUDE_GATEWAY_SERVER_ID_HEADER=true

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ENABLED=true
# CORS_ALLOW_ORIGINS=["*"]
# CORS_ALLOW_METHODS=["*"]
# CORS_ALLOW_HEADERS=["*"]
